<Window x:Class="Random_game.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Random_game"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400" Background="#ff404040" Foreground="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0">
            <Button Background="#ff303030" Foreground="White"
                    Height="30" FontSize="14" Width="auto"
                    Margin="0,0,12,0"
                    Command="{Binding ShowStatsCommand}">ShowStats</Button>

            <Button Background="#ff303030" Foreground="White"
                    Height="30" FontSize="14" Width="60"
                    Margin="0,0,12,0"
                    Command="{Binding RerollCommand}">Reroll</Button>

            <Button Background="#ff303030" Foreground="White"
                    Height="30" FontSize="14" Width="60"
                    Command="{Binding FightCommand}">Attack</Button>
        </StackPanel>
        <StackPanel Grid.Row="0">
        <TextBlock TextWrapping="Wrap" HorizontalAlignment="Left"  Width="auto" Height="50" Text="{Binding StatsResult}" />
        <TextBlock Width="auto" HorizontalAlignment="Center" Height="50" Text="{Binding WinnerResult}"/>
        <TextBlock TextWrapping="Wrap" HorizontalAlignment="Right"  Width="auto" Height="50" Text="{Binding EnemyStatsResult}" />
        </StackPanel>
    </Grid>
</Window>
